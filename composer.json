{
    "name": "marcossaoleo/laravel-oauth2-login",
    "description": "Provides a middleware to protect resources requiring an OAuth2 login",
    "keywords": [
        "OAuth2",
        "Laravel",
        "Middleware",
        "ACL",
        "Login",
        "Session"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Marcos Teixeira",
            "email": "marcossaoleo@yahoo.com.br"
        }
    ],
    "homepage": "https://github.com/marcossaoleo/laravel-oauth2-login",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "laravel/framework": "^11.9",
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Kronthto\\LaravelOAuth2Login\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --verbose"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Kronthto\\LaravelOAuth2Login\\ServiceProvider"
            ]
        }
    },
    "prefer-stable": true
}
